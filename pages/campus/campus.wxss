.main-card-item#tsg .card-item-bd {
    padding-bottom: 85rpx;
}

.tsg-list {
    display: flex;
    /* flex-wrap: wrap; */
    justify-content: space-around;
    flex-direction: column;

}

.tsg-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 20rpx 15rpx 15rpx;
    border: 5px solid #79d0a6;
    border-radius: 8px;
    padding-top: 20rpx;
}

.tsg-book {
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    width: 400rpx;
    height: 400rpx;
    /*background-image: url('/images/index/tsg-book.png');*/
    /*微信暂不支持静态bgimg文件，改用服务器url*/
    /* background-image: url(''); */
    background-size: 100% 100%;
    padding: 50rpx 80rpx;
    color: #888;
    margin-bottom: 10rpx;
}

.tsg-pickup-time {
    font-size: 26rpx;
    word-wrap: break-word;
    white-space: nowrap;
}

.tsg-pickup-time-text {
    padding-left: 4rpx;
}

.tsg-book-name {
    height: 186rpx;
    width: 190rpx;
    font-weight: bold;
    word-wrap: break-word;
    word-break: break-all;
    text-overflow: ellipsis;
    overflow: hidden;
    display: flex;
    align-items: center;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
}

.tsg-timing,
tsg-return-time {
    line-height: 200%;
}

.tsg-timing-value {
    font-size: 13pt;
    font-weight: bold;
    color: #729fc3;
    padding: 0 8rpx;
}

.tsg-timing-text {
    font-size: 10pt;
    color: #acacac;
}

.tsg-return-time-value {
    font-size: 12pt;
    color: #7f848a;
}

.tsg-return-time-text {
    font-size: 10pt;
    color: #acacac;
    padding-left: 8rpx;
}

