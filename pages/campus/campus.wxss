.container {
    background-color: #f7f7f7;
    height: 100%;
}

.user-tsg {
    display: flex;
    background: #fefefe;
    border-bottom: 1rpx solid #eee;
}

.user-tsg-item {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    font-size: 11pt;
    line-height: 150%;
    height: 150rpx;
    padding: 20rpx;
    border-right: 1rpx solid #eee;
}

.user-tsg-dbet {
    border: none;
}

.user-tsg-hd {
    color: #777;
}

.user-tsg-bd {
    display: flex;
    justify-content: center;
}

.user-tsg-value {
    font-size: 28pt;
    color: #7fb7d1;
    font-weight: bold;
    line-height: 150%;
    padding: 0 20rpx 0 30rpx;
}

.user-tsg-text {
    color: #999;
    font-size: 10pt;
    line-height: 200%;
    align-self: flex-end;
}

.book-list {
    display: flex;
    flex-direction: column;
    align-items: stretch;
    padding: 25rpx 30rpx;
}

.current-type {
    color: #777;
    font-size: 12pt;
    line-height: 200%;
    background-color: #79d0a6;
    opacity: .3;
    padding: 10px;
    width: 25%;
    border-radius: 3px;
    margin-top: 20rpx;
    display: flex;
    justify-content: center;
    color: black;
}

.current-type.active {
    opacity: 1;
    transform: scale(1.03, 1.03);
    box-shadow: 1px 2px 3px #ddd;
}

.book-wraper {
    display: flex;
    flex-direction: column;
    align-items: stretch;
    justify-content: space-between;
    overflow: hidden;
    padding: 35rpx 30rpx 10rpx;
    margin-bottom: 20rpx;
    background: #fff;
    border-radius: 5px;
    height: 160rpx;
}

.book-name {
    line-height: 135%;
    word-break: break-all;
    color: #888;
}

.book-date {
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
    margin-top: 25rpx;
    font-size: 9pt;
    color: #888;
}

.yhrq-value {
    font-size: 13pt;
}

.book-img {
    height: 13pt;
    width: 13pt;
    margin-top: 2pt;
    margin-right: 10rpx;
}




