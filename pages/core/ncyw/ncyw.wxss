.container{
    background-color: #fff;
    padding-bottom: 20rpx;
  }
  
  .filter{
    position: fixed;
    z-index: 1;
    width: 100%;
    height: 160rpx;
    white-space: nowrap;
    background: -webkit-gradient(linear, left top, left bottom, from(rgba(255,255,255,1)), color-stop(0.93, rgba(255,255,255,.93)), to(rgba(255,255,255,0)));
  }
  
  .filter-item{
    width: 120rpx;
    height: 120rpx;
    margin:20rpx 10rpx;
    
    border-radius: 5rpx;
    box-shadow: 1px 2px 3px #e5e5e5;
    opacity: .66;
  }
  
  .filter-item.active{
    opacity: 1;
    transform: scale(1.08,1.08);
    box-shadow: 1px 2px 3px #ddd;
  }
  
  .content{
    display: flex;
    flex-direction: column;
    padding: 20px 20rpx 0;
  }
  
  .list-item{
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 120rpx;
    margin-bottom: 20rpx;
    border-radius: 3px;
    box-shadow: 1px 2px 3px #ddd;
    padding: 0 30rpx;
    color: #fff;
  }
  
  .list-item.news{
    background-color:#efa8a1;
  }
  .list-item.notice{
    background-color: #b5d8ad;
  }
  .list-item.scholarship{
    background-color: #8ebfe2;
  }
  .list-item.updatings{
    background-color: #f4a4c4;
  }
  /* .list-item.new{
    background-color: #7acfa6;
  } */
  
  .list-item-left{
    flex: 1 1 auto;
    display: flex;
    flex-direction: column;
    overflow: hidden;
    padding-right: 10rpx;
  }
  .list-item-title{
    font-size: 13pt;
    line-height: 175%;
    white-space: nowrap;
    text-overflow: ellipsis;
    width: 100%;
    overflow: hidden;
  }
  .list-item-time{
    font-size: 10pt;
    line-height: 125%;
    opacity: 0.6;
  }
  
  .list-item-icon{
    flex: 0 0 50rpx;
    height: 50rpx;
    width: 50rpx;
    border-left: 1px solid #fff;
    padding-left: 25rpx;
  }