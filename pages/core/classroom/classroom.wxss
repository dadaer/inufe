.container {
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.classroom-header {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  padding: 50rpx 0;
}

.classroom-text {
  display: flex;
  flex-flow: column nowrap;
  justify-content: flex-start;
  padding-left: 25rpx;
}

.classroom-header-title {
  font-size: 20pt;
  font-weight: bold;
  line-height: 150%;
  margin-bottom: 15rpx;
  color: #222;
}

.classroom-header-info {
  font-size: 11pt;
  line-height: 160%;
  color: #888;
}

.classroom-bg {
  display: block;
  width: 200rpx;
  height: 200rpx;
  padding-right: 5rpx;
  opacity: .3;
}

.content {
  display: flex;
  /* flex-direction: column; */
  padding: 20px 20rpx 0;
  flex-wrap: wrap;
  border: 3px solid #fbaa94;
  border-radius: 8px;
  margin-bottom:20px;
}

.list-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 120rpx;
  margin-bottom: 20rpx;
  border-radius: 3px;
  /* box-shadow: 1px 2px 3px #ddd; */
  padding: 0 30rpx;
  color: #fbaa94;
  width: 36%;
  margin-left: 20rpx
}

.list-item.news {
  background-color: #fbaa94;
}

.list-item.notice {
  background-color: #b5d8ad;
}

.list-item.scholarship {
  background-color: #8ebfe2;
}

.list-item.updatings {
  background-color: #f4a4c4;
}

/* .list-item.new{
    background-color: #7acfa6;
  } */

.list-item-left {
  flex: 1 1 auto;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  padding-right: 10rpx;
}

.list-item-title {
  font-size: 12pt;
  line-height: 175%;
  white-space: nowrap;
  text-overflow: ellipsis;
  width: 100%;
  overflow: hidden;
}

.list-item-time {
  font-size: 10pt;
  line-height: 125%;
  opacity: 0.6;
}

.list-item-icon {
  flex: 0 0 50rpx;
  height: 50rpx;
  width: 50rpx;
  border-left: 1px solid #fff;
  padding-left: 25rpx;
}