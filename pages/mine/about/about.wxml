        <image class="logo" src="/images/mine/logo.png"></image>
        <image class="title" src="/images/mine/title.png"></image>
    </view>
    <view class="content">
        <view class="version">
            <view class="version-title">
                <text class="title-name">i南财</text>   
                <!-- <text class="version-text">提交审核版</text> -->
            </view>
